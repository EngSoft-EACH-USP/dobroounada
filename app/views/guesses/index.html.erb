<p id="notice"><%= notice %></p>

<h1>Listing Guesses</h1>

<table>
  <thead>
    <tr>
      <th>Bet</th>
      <th>Usuario</th>
      <th>Won status</th>
      <th>Guess text</th>
      <th>Guess status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guesses.each do |guess| %>
      <tr>
        <td><%= guess.bet_id %></td>
        <td><%= guess.usuario_id %></td>
        <td><%= guess.won_status %></td>
        <td><%= guess.guess_text %></td>
        <td><%= guess.guess_status %></td>
        <td><%= link_to 'Show', guess %></td>
        <td><%= link_to 'Edit', edit_guess_path(guess) %></td>
        <td><%= link_to 'Destroy', guess, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guess', new_guess_path %>
