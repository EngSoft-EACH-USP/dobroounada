<%= render "layouts/header" %>
<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-lg-12">
		<legend>Dados da Aposta</legend>
		<div class="row">
			<div class="col-lg-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title">Aposta</h2>
					</div>
					<div class="panel-body">
						<p>
							<strong>Nome:</strong>
							<%= @bet.name %>
						</p>
						<p>
							<strong>Descrição:</strong>
							<%= @bet.description %>
						</p>
						<p>
							<strong>Dono da Sala:</strong>
							<% user = Usuario.find(@bet.usuario_id) %>
							<%= user.name %>
						</p>
						<p>
							<strong>Url da foto:</strong>
							<%= @bet.url_photo %>
						</p>
						<p>
							<strong>Categoria:</strong>
							<%= @bet.category %>
						</p>
						<p>
							<strong>Valor da aposta:</strong>
							<%= @bet.stake %>
						</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title">Informações Gerais:</h2>
					</div>
					<div class="panel-body">
						<p>
							<strong>Status da Sala:</strong>
							<% if @bet.room_status == 0 %>
							Inativa
							<% else %>
							Ativa
							<% end %>
						</p>
						<p>
							<strong>Tipo da Sala:</strong>
							<% if @bet.room_type == 0 %>
							Privada
							<% else %>
							Pública
							<% end %>
						</p>
						<p>
							<strong>Data limite para apostas:</strong>
							<%= @bet.final_date %>
						</p>
						<p>
							<strong>Resposta Final:</strong>
							<%= @bet.final_answer %>
						</p>
						<p>
							<strong>Tipo de Resposta:</strong>
							<%= @bet.answer_type %> <!-- Corrigir -->
						</p>
					</div>
				</div>
			</div>
		</div>
		<%= link_to edit_bet_path(@bet) do %>
		<span class='glyphicon glyphicon-edit'></span>&nbsp;Editar
		<% end %>
		|
		<%= link_to bets_path do %>
		<span class='glyphicon glyphicon-chevron-left'></span>&nbsp;Voltar
		<% end %>
		|
		<%= link_to controller: "bets", action:'inside_bet', :id => @bet do %>
		<span class='glyphicon glyphicon-log-in'></span>&nbsp;Entrar na aposta
		<% end %>
		
		<!--
			<button type="button" class="btn "><%= link_to 'Entrar na Aposta', controller: "bets", action:'inside_bet', :id => @bet%>
			</button> 
			-->
	</div>
</div>
<%= render "layouts/footer" %>