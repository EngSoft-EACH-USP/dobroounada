<%= render "layouts/header" %>
<p id="notice"><%= notice %></p>
<div class="col-lg-12">
	<legend style="text-align:center">Dados da Aposta</legend>
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">Aposta</h2>
			</div>
			<div class="panel-body">
				<dl>
					<dt>Nome</dt>
					<dd><%= @bet.name %></dd>
					<dt>Descrição</dt>
					<dd><%= @bet.description %>
					<dd>
					<dt>Dono da Sala</dt>
					<% user = Usuario.find(@bet.usuario_id) %>
					<dd><%= user.name %></dd>
					<dt>Url da foto</dt>
					<dd><%= @bet.url_photo %></dd>
					<dt>Categoria</dt>
					<dd><%= @bet.category %></dd>
					<dt>Valor da aposta</dt>
					<dd><%= @bet.stake %></dd>
				</dl>
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">Informações Gerais</h2>
			</div>
			<div class="panel-body">
				<dl>
					<dt>Status da Sala</dt>
					<% if @bet.room_status == 0 %>
					Inativa
					<% else %>
					Ativa
					<% end %>
					</dd>
					<dt>Tipo da Sala</dt>
					<dd>
						<% if @bet.room_type == 0 %>
						Privada
						<% else %>
						Pública
						<% end %>
					</dd>
					<dt>Data limite para apostas</dt>
					<dd><%= @bet.final_date %></dd>
					<dt>Resposta Final</dt>
					<dd><%= @bet.final_answer %></dd>
					<dt>Tipo de Resposta</dt>
					<dd>
						<%= @bet.answer_type %> <!-- Corrigir -->
					</dd>
				</dl>
			</div>
		</div>
	</div>
</div>
